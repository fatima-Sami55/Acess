<div class="row">
  <% data.forEach(item => { %>
    <div class="col-12 col-sm-6 col-lg-3 mb-4">
      <div class="card h-100 d-flex flex-column product-card">
        <img src="<%= item.image %>" class="card-img-top" alt="<%= item.name %>" />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-0 product-name"><%= item.name %></h5>
          <p class="card-text text-muted mb-3 product-description"><%= item.description %></p>
          <div class="d-flex justify-content-between align-items-center mt-auto">
            <p class="text-success mb-0 product-price">$<%= item.price %></p>
            <div class="ms-auto text-warning">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
            </div>
          </div>
          <br />
          <button class="btn btn-dark text-white card-btn">View product</button>
        </div>
      </div>
    </div>
  <% }) %>
</div>
